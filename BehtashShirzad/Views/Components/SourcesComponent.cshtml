@{

    @model IEnumerable< BehtashShirzad.Models.DbModels.Product>
    if (Model.Count() > 1)
    {

        foreach (var item in Model)
        {

            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="card custom-card mb-3">
                    <div class="sub-layer">
                        <img src="@item?.image" alt="bootstrap" class="img-fluid card-img-top">
                        <div class="over-layer">
                            <a href="course.html" class="btn btn-primary"> مشاهده و خرید </a>
                           
                        </div>
                    </div>
                    <div class="card-body">
                        <a href="course.html" class="card-link"> @item?.Name </a>
                        <p class="text-justify card-text vazir font-14 mt-3">
                            @item?.Description
                        </p>
                    </div>
                    <div class="card-footer">

                        <div class="float-left">

                            <small class="text-success mr-2"> @item?.Price </small>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

    else
    {

        <div> محصولی برای فروش موجود نمی باشد</div>
    }

}
